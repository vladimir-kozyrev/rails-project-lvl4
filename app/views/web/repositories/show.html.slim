.mt-4.mb-5.pb-5
  .p-4.align-items-center.border.shadow.bg-white.rounded-3
    .mb-4
      h1 = @repository.repo_name
    = link_to t('basics.check'), repository_checks_path(@repository),
                                 method: :post, class: 'btn btn-primary mb-4'
    p
      strong.me-2
        = t('basics.name')
      = "#{@repository.owner_name}/#{@repository.repo_name}"
    p
      strong.me-2
        = t('basics.language')
      = @repository.language
    p
      strong.me-2
        = t('basics.created_at')
      = @repository.repo_created_at
    p
      strong.me-2
        = t('basics.updated_at')
      = @repository.repo_updated_at
    hr
    table.table.table-striped
      thead
        tr
