            = t('.check_passed')
          th[scope="col"]
            = t('basics.created_at')
      tbody
        - @repository.checks.each do |check|
          tr
            td[scope="row"]
              = check.aasm_state
            td[scope="row"]
              = link_to '3b03d53', root_path
